<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= data.siteTitle %></title>
  <!-- Include Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <!-- Include Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <!-- Include Google Fonts -->
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <!-- Viewport Meta Tag for Responsive Design -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <%- include('partials/header') %>
  
  <main>
    <!-- Hero Section -->
    <section id="hero">
      <!-- Video Background -->
      <video autoplay muted loop playsinline id="hero-video" poster="<%= data.hero.posterImage %>">
        <source src="<%= data.hero.videoSrc %>" type="video/mp4">
        Your browser does not support the video tag.
      </video>

      <!-- Overlay -->
      <div class="hero-overlay"></div>

      <!-- Hero Content -->
      <div class="hero-content">
        <h1><%= data.hero.title %></h1>
        <p><%= data.hero.subtitle %></p>
        <a href="<%= data.hero.buttonLink %>" class="btn btn-primary"><%= data.hero.buttonText %></a>
      </div>
    </section>

    <!-- Music Section -->
    <section id="music" class="py-5">
      <h2 class="text-center mb-5">Music</h2>
      <div class="container">
        <div class="music-items row gy-5">
          <% data.musicItems.forEach(item => { %>
            <div class="col-12">
              <div class="music-card p-4 position-relative">
                <!-- Cover Art with Modal Trigger -->
                <a href="#" data-bs-toggle="modal" data-bs-target="#modal-<%= item.id %>">
                  <img src="<%= item.coverArt %>" alt="<%= item.title %> Cover Art" class="music-cover-art">
                </a>

                <!-- Music Item Information -->
                <h3 class="music-title"><%= item.title %></h3>
                <h5 class="music-composer">by <%= item.composer %></h5>
                <p class="music-description"><%= item.description %></p>

                <!-- Platform Links -->
                <div class="platform-links d-flex flex-wrap justify-content-center justify-content-md-start gap-2 mb-4">
                  <% const platformsList = ['spotify', 'appleMusic', 'soundcloud', 'bandcamp']; %>
                  <% const platformIcons = {
                       spotify: 'spotify-square-color-icon.svg',
                       appleMusic: 'apple-music-icon.svg',
                       soundcloud: 'soundcloud-square-black-icon.svg',
                       bandcamp: 'bandcamp-button-square-aqua-64.png' // Use correct file extension
                     }; %>
                     <% platformsList.forEach(function(platform) { %>
                      <% if (item.platforms[platform]) { %>
                        <a href="<%= item.platforms[platform] %>" target="_blank">
                          <img src="/images/icons/<%= platformIcons[platform] %>" alt="<%=
                            platform === 'appleMusic' ? 'Apple Music' :
                            platform.charAt(0).toUpperCase() + platform.slice(1)
                          %>" class="platform-icon<%= platform === 'bandcamp' ? ' bandcamp-icon' : '' %>">
                        </a>
                      <% } %>
                    <% }); %>
                </div>
                <!-- Conditional Rendering Based on Type -->
                <% if (item.type === 'single') { %>
                  <!-- Single Track -->
                  <div class="track-content">
                    <audio controls class="w-100">
                      <source src="<%= item.audioSrc %>" type="audio/mpeg">
                      Your browser does not support the audio element.
                    </audio>
                  </div>
                  <!-- Modal for Enlarged Cover Art -->
                  <div class="modal fade" id="modal-<%= item.id %>" tabindex="-1" aria-labelledby="modalLabel-<%= item.id %>" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                      <div class="modal-content">
                        <div class="modal-body p-0">
                          <img src="<%= item.coverArt %>" alt="<%= item.title %> Cover Art" class="img-fluid w-100">
                          <span class="close-overlay" data-bs-dismiss="modal">&times;</span>
                        </div>
                      </div>
                    </div>
                  </div>

                <% } else if (item.type === 'album') { %>
                  <!-- Album Tracks List -->
                  <div class="tracks-list">
                    <% item.tracks.forEach((track, index) => { %>
                      <div class="track mb-3">
                        <h5 class="track-title">Track <%= index + 1 %>: <%= track.title %> <% if (track.duration) { %> (<%= track.duration %>) <% } %></h5>
                        <% if (track.description) { %>
                          <p class="track-description"><%= track.description %></p>
                        <% } %>
                        <audio controls class="w-100">
                          <source src="<%= track.audioSrc %>" type="audio/mpeg">
                          Your browser does not support the audio element.
                        </audio>
                      </div>
                    <% }) %>
                  </div>
                  <!-- Modal for Enlarged Album Cover Art -->
                  <div class="modal fade" id="modal-<%= item.id %>" tabindex="-1" aria-labelledby="modalLabel-<%= item.id %>" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                      <div class="modal-content">
                        <div class="modal-body p-0">
                          <img src="<%= item.coverArt %>" alt="<%= item.title %> Cover Art" class="img-fluid w-100">
                          <span class="close-overlay" data-bs-dismiss="modal">&times;</span>
                        </div>
                      </div>
                    </div>
                  </div>

                <% } %>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </section>
  </main>
  
  <%- include('partials/footer') %>
  <!-- Include Custom JS -->
  <script src="/js/main.js"></script>
  <!-- Include Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Additional Scripts -->
  <script src="/js/audio-control.js"></script>
</body>
</html>
